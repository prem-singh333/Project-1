<% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-4">
        <h3 class="col-6 offset-3">SignUp on Wanderlust</h3>
        <div class="col-6 offset-3">
            <form method="POST" action="/signup" class="needs-validation mb-2" novalidate>
                <div class="mt-3">
                    <label for="usernamme" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" id="username" required>
                    <!-- <div class="invalid-feedback">
                        Please entre your username*
                    </div> -->
                </div>

                <div class="mt-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="email" class="form-control" id="email" required>
                    <!-- <div class="invalid-feedback">
                        Please entre your email id*
                    </div> -->
                </div>

                <div class="mt-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" required>
                    <!-- <div class="invalid-feedback">
                        Please entre your password*
                    </div> -->
                </div>
                <button class="btn btn-success mt-4">Sign-Up</button>
            </form>
        </div>
    </div>